{
    "$schema": "https://raw.githubusercontent.com/edosssa/pm2-config/master/pm2config.json",
    "apps": [
        {
            "name": "base",
            "cwd": "dist/apps",
            "script": "base/main.js",
            "autorestart": true,
            "maxRestarts": 3
        },
        {
            "name": "graph",
            "cwd": "dist/apps",
            "script": "graph/main.js",
            "autorestart": true,
            "maxRestarts": 3
        },
        {
            "name": "generate",
            "cwd": "dist/apps",
            "script": "generate/main.js",
            "autorestart": true,
            "maxRestarts": 3
        },
        {
            "name": "qa",
            "cwd": "dist/apps",
            "script": "qa/main.js",
            "autorestart": true,
            "maxRestarts": 3
        },
        {
            "name": "qa_worker",
            "cwd": "apps/qa-worker",
            "interpreter": ".venv/bin/python",
            "script": "worker/main.py",
            "instances": 2,
            "autorestart": true,
            "maxRestarts": 3
        }
    ]
}